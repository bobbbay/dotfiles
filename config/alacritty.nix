{
  font = {
    normal = {
      family = "Iosevka";
      style = "Regular";
    };
    bold = {
      family = "Iosevka";
      style = "Bold";
    };
    italic = {
      family = "Iosevka";
      style = "Italic";
    };
    size = 10;
